{
    "name": "node-express-base",
    "version": "0.0.1",
    "description": "Sample nodejs basis for a web application using express.",
    "author": "Alexander Schmidt <alexanderschmidt1@gmail.com>",
    "license": "MIT",
    "main": "server/index.js",
    "scripts": {
        "build:css": "node-sass assets/css/styles.scss build/assets/css/styles.css",
        "build:clean": "npm run clean && npm run build",
        "build": "npm run build:css",
        "clean": "rm -rf node_modules && rm -rf build",
        "dev": "node-dev server/index.js",
        "test": "eslint . && npm run test:unit && npm run test:functional",
        "test:functional": "mocha --recursive test/functional",
        "test:unit": "mocha --recursive test/unit"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/lxanders/node-express-base"
    },
    "dependencies": {
        "hbs": "3.0.1",
        "express": "4.12.3"
    },
    "devDependencies": {
        "chai": "2.3.0",
        "eslint": "0.20.0",
        "eslint-plugin-mocha": "0.2.2",
        "mocha": "2.2.4",
        "node-dev": "2.6.1"
    }
}
