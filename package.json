{
    "name": "node-express-base",
    "version": "1.0.0",
    "description": "Sample nodejs basis for a web application using express.",
    "author": "Alexander Schmidt <alexanderschmidt1@gmail.com>",
    "license": "MIT",
    "main": "server/index.js",
    "scripts": {
        "build:clean": "npm run clean && npm run build",
        "build:css": "node-sass assets/css/styles.scss -o build/assets/css",
        "build:css:dev": "npm run build:css -- -w --output-style expanded",
        "build:css:production": "npm run build:css -- --output-style compressed",
        "build:dev": "npm run build:css:dev",
        "build:docker": "docker build -t node-express-base .",
        "build:package": "npm pack",
        "build:production": "npm run build:css:production",
        "check-coverage": "istanbul check-coverage --statement 100 --branch 100 --function 100 --lines 100",
        "clean": "rm -rf node_modules && rm -rf build",
        "coveralls": "cat ./build/coverage/lcov.info | coveralls",
        "dev": "npm run build:dev & node-dev server/index.js",
        "lint": "eslint .",
        "posttest": "npm run check-coverage",
        "pretest": "npm run lint",
        "start:docker": "docker run -p 42123:3000 -d node-express-base",
        "test": "npm run test:unit --coverage && npm run test:functional",
        "test:functional": "mocha --recursive test/functional",
        "test:unit": "istanbul test _mocha test/ -- --recursive"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/lxanders/node-express-base"
    },
    "dependencies": {
        "hbs": "3.0.1",
        "express": "4.12.3",
        "winston": "1.0.0"
    },
    "devDependencies": {
        "chai": "2.3.0",
        "coveralls": "2.11.2",
        "eslint": "0.20.0",
        "eslint-plugin-mocha": "0.2.2",
        "istanbul": "0.3.13",
        "mocha": "2.2.4",
        "node-dev": "2.6.1",
        "node-sass": "3.0.0",
        "require-uncached": "1.0.2",
        "sinon": "1.14.1",
        "sinon-chai": "2.7.0",
        "supertest": "0.15.0"
    }
}
