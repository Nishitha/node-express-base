{
    "name": "node-express-base",
    "version": "2.0.0",
    "description": "Sample nodejs basis for a web application using express.",
    "author": "Alexander Schmidt <alexanderschmidt1@gmail.com>",
    "license": "MIT",
    "main": "server/index.js",
    "scripts": {
        "babel": "babel server --out-dir build/server",
        "build:assets": "npm run clean:assets && npm run build:assets:prepare:directories && npm run build:assets:copy",
        "build:assets:copy": "npm run build:assets:copy:img",
        "build:assets:copy:img": "cp -r assets/img build/assets/img",
        "build:assets:prepare:directories": "mkdir -p build/assets",
        "build:css": "node-sass assets/css/styles.scss -o build/assets/css",
        "build:css:dev": "npm run build:css -- --output-style expanded",
        "build:css:production": "npm run build:css -- --output-style compressed",
        "build:dev": "npm run clean:build && npm run babel && npm run build:assets && npm run build:css:dev",
        "build:docker": "npm run build:production && docker build -t node-express-base .",
        "build:package": "npm pack",
        "build:production": "npm run clean:build && npm run build:assets && npm run build:css:production",
        "clean": "npm run clean:build && npm run clean:modules",
        "clean:assets": "rm -rf build/assets",
        "clean:build": "rm -rf build",
        "clean:modules": "rm -rf node_modules",
        "coveralls": "cat ./build/coverage/lcov.info | coveralls",
        "predev": "npm run build:dev",
        "dev": "npm run build:css:dev -- -w & node-dev build/server/index.js & npm run babel -- -w",
        "lint": "eslint .",
        "pretest": "npm run lint",
        "start": "babel server --out-dir build/server && node build/server/index.js",
        "start:docker": "docker run --restart=always -p 42123:3000 -d node-express-base",
        "test": "npm run test:unit:coverage && npm run test:functional",
        "test:functional": "mocha test/functional --opts test/functional/mocha.opts",
        "test:unit": "mocha test/unit --opts test/unit/mocha.opts",
        "test:unit:coverage": "babel-node node_modules/isparta/bin/isparta cover _mocha -- test/unit --opts test/unit/mocha.opts",
        "test:unit:watch": "npm run test:unit -- --watch --reporter min"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/lxanders/node-express-base"
    },

    "dependencies": {
        "hbs": "4.0.0",
        "express": "4.13.3",
        "morgan": "1.6.1",
        "winston": "2.1.1"
    },
    "devDependencies": {
        "babel-cli": "6.2.0",
        "babel-core": "6.2.0",
        "babel-preset-es2015": "6.1.18",
        "chai": "3.4.1",
        "coveralls": "2.11.4",
        "eslint": "1.9.0",
        "eslint-plugin-mocha": "1.1.0",
        "isparta": "4.0.0",
        "mocha": "2.3.4",
        "node-dev": "2.7.1",
        "node-sass": "3.4.2",
        "sinon": "1.17.2",
        "sinon-chai": "2.8.0",
        "supertest": "1.1.0"
    }
}
